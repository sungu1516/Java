package com.day;

public class Note1 {

	public static void main(String[] args) {
		make_tri();
		
	}

	
	
	static void make_tri() {
		for (int i = 1; i < 6; i++) {
			for (int j = 10; j > 0; j--) { // i의 값에 따라 for구문 돌아가는 횟수가 달라진다. 
				
				if (i >= j) {
					System.out.print('*');
				}
				
				
			}
		System.out.println();
		}

		
		
//		for (int i = 3; i > -1; i--) {
//			for (int j = 0; j < i+1; j++) { // i의 값에 따라 for구문 돌아가는 횟수가 달라진다. 
//				System.out.print('*');			
//			}
//		System.out.println("");
//		}
		
	}
}
