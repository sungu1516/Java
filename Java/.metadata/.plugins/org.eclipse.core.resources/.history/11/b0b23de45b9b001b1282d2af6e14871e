		char[][] cs_2 = new char[2][];
		cs_2[0] = new char[2];
		cs_2[1] = new char[2];
		
		char_text(cs_2[0]);
		cs_2[0][1] = 'b';
		System.out.println(cs_2[0]); // 왜 이렇게 해도 출력이 되는가?
	}
	
