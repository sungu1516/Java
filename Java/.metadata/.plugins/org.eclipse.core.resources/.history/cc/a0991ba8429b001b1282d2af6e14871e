	// 인트 값을 인자로 하는 함수 
	static int tostr(int n) {
		n = 1000;
		return n;
	}
	
	// 배열을 인자로 하는 함수
	static int tostr(int[] n) {
		n[0] = 1;
		return n[0];
	}
	
	
	
	
	
	
	
