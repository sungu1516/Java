package com.day;

public class Day_0408 {

	public static void main(String[] args) {
		
		String name = "helloworld"; // 이 문자열은 배열인가? 아래에서 증명
		
		//System.out.println(name.length());          // 이와 같이 배열은 내재함수 (.뒤에 나오는) 가 존재한다. 한편, 결과로는 10이 나오는데 이는 글자수와 동일. 하지만 max index는 9이다. 항상 max index = 글자수 -1 
			//forgugu(15);
			gugudan2(3);
			
		}

	
	
	static void gugudan(int i) {
		
		int m = i;
		if(i<10) {
			m = 10;
		for (int j = 1; j < m; j++) {
				System.out.print(i + "*" + j + "=" + i*j + "\t");
			}		
		}
//		else if(i>=10) {
//			for (int j = 1; j < i + 1 ; j++) {
//				System.out.print(i + "*" + j + "=" + i*j + "\t");
//			}	
//		}
	}

	static void gugudan_0(int i) {
		for (int j = 1; j < 10 || j < i; j++) {
			System.out.print(i + "*" + j + "=" + i*j + "\t");
		}
	}
	
	
	
	
	 
	static void gugudan2(int i) {
		i++;
		if(i < 10)
			i = 10;
		else if(i > 19)
			i = 20;
		
		int m = i;
	
		for (int i1 = 2; i1 < m; i1++) {
			
			gugudan_0(i1);
			
			System.out.println("-----------------------------");
			}
//		for (int i2 = 10; i2 < max; i2++) {
//			for (int j = 1; j < j+1; j++) {
//				System.out.println(i2 + "*" + j + "=" + i2*j + "\t");				
//			}
//		}
	}
	
	
}
