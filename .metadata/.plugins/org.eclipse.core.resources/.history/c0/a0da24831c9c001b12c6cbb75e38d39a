package com.day;

public class Note1 {

	public static void main(String[] args) {
		make_tri();
		
	}

	
	
	static void make_tri() {
		for (int i = 0; i < 5; i++) {
			if (i < 5)
			for (int j = 0; j < i+1; j++) { // i의 값에 따라 for구문 돌아가는 횟수가 달라진다. 
				System.out.print('*');
				if (i == 5) {
					
				}
			}
		System.out.println("");
		}
		
		for (int i = 0; i < 10; i++) {
			if (i < 5)
			for (int j = 0; j < i+1; j++) { // i의 값에 따라 for구문 돌아가는 횟수가 달라진다. 
				System.out.print('*');
				if (i == 5) {
					
				}
			}
		System.out.println("");
		}
		
	}
}
